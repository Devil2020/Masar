<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorOfBackground"
        app:title="Masar"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/actionBar"
        app:titleTextColor="@android:color/white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/before"
                android:src="@drawable/ic_navigate_before_black_24dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/slideImageRecyclerView"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="50dp"
                android:orientation="horizontal"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorOfBackground"
                android:layout_alignParentRight="true"
                android:layout_marginTop="80dp"
                android:layout_marginRight="25dp"
                android:id="@+id/next"
                android:src="@drawable/ic_navigate_next_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yearKey"
                android:layout_below="@id/slideImageRecyclerView"
                android:text="Year :"
                android:textSize="15sp"
                android:textAppearance="@style/cairo_bold"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/colorOfBackground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yearValue"
                android:layout_below="@id/slideImageRecyclerView"
                android:text="1997 - 2 -19"
                android:textSize="15sp"
                android:textAppearance="@style/cairo_bold"
                android:textColor="#000"
                android:layout_toRightOf="@id/yearKey"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/howBuiltKey"
                android:layout_below="@id/yearKey"
                android:textSize="15sp"
                android:text="Architect :"
                android:textAppearance="@style/cairo_bold"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/colorOfBackground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/howBuiltValue"
                android:layout_below="@id/yearValue"
                android:textSize="15sp"
                android:textAppearance="@style/cairo_bold"
                android:text="Mohammed Alaa"
                android:fontFamily="@font/cairo_bold"
                android:textColor="#000"
                android:layout_toRightOf="@id/howBuiltKey"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/styleKey"
                android:layout_below="@id/howBuiltValue"
                android:textSize="15sp"
                android:text="Style :"
                android:textAppearance="@style/cairo_bold"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/colorOfBackground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/styleValue"
                android:layout_below="@id/howBuiltValue"
                android:textSize="15sp"
                android:textAppearance="@style/cairo_bold"
                android:text="Egyption Islamic"
                android:fontFamily="@font/cairo_bold"
                android:textColor="#000"
                android:layout_toRightOf="@id/styleKey"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reviewKey"
                android:layout_below="@id/styleValue"
                android:textSize="15sp"
                android:textAppearance="@style/cairo_bold"
                android:text="Review : "
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/colorOfBackground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reviewValue"
                android:layout_below="@id/reviewKey"
                android:textSize="15sp"
                android:text="This is my review about this Mountine view"
                android:fontFamily="@font/cairo_bold"
                android:textColor="#000"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAppearance="@style/cairo_bold"
                android:autoSizeTextType="uniform"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationKey"
                android:layout_below="@id/reviewValue"
                android:textSize="15sp"
                android:text="Location :"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/colorOfBackground"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/cairo_bold"
                android:layout_marginLeft="5dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reviewValue"
                android:layout_toRightOf="@id/locationKey"
                android:id="@+id/locationValue"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/indoorRecyclerView"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_below="@id/locationValue"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="30dp"
                />
         </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorOfBackground"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_unstar_it"
        android:id="@+id/addToFavourite"
        />
</RelativeLayout>