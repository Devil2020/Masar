<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subcategorious.SubCategoriousFragment">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subcategorious.SubCategoriousFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorOfBackground"
        app:title="Masar"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/actionBar"
        app:titleTextColor="@android:color/white"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/search_theme"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:hint="Search ......."
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/searchbar2"
        android:layout_below="@id/actionBar"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mapImage"
        android:layout_below="@id/searchbar2"
        android:layout_marginTop="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mapImage"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:id="@+id/subCategoriousRecyclerview"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
</ScrollView>