<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.splash.fragments.ThirdIndexFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        android:id="@+id/logoTop"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        android:id="@+id/locationTop"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37"
        android:id="@+id/locationBottom"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        android:id="@+id/locationLeft"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.525"
        android:id="@+id/locationRight"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"
        android:id="@+id/logBottom"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/logoLeft"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/logRight"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        android:id="@+id/textBottom"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/buttonBottom"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logoTop"
        app:layout_constraintBottom_toTopOf="@id/logBottom"
        app:layout_constraintLeft_toRightOf="@id/logoLeft"
        app:layout_constraintRight_toLeftOf="@id/logRight"
        tools:src="@drawable/intro3e"
        tools:visibility="visible"
        android:visibility="invisible"
        android:id="@+id/mapImage"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logBottom"
        app:layout_constraintBottom_toTopOf="@id/textBottom"
        app:layout_constraintLeft_toRightOf="@id/logoLeft"
        app:layout_constraintRight_toLeftOf="@id/logRight"
        android:weightSum="3"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/thirdScreenText1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="@string/location"
            android:textAppearance="@style/cairo_bold"
            android:textColor="@color/colorOfBackground"
            android:textSize="@dimen/textMiddum"
            android:textStyle="bold"
            android:visibility="invisible"
            app:fontFamily="@font/cairo_bold"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/thirdScreenText2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textAppearance="@style/cairo_bold"
            android:text="@string/thirdPhrase"
            android:textColor="@color/colorOfBackground"
            android:textSize="@dimen/textSmall"
            android:visibility="invisible"
            tools:visibility="visible" />
    </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_location_on_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/locationTop"
        app:layout_constraintBottom_toTopOf="@id/locationBottom"
        app:layout_constraintLeft_toRightOf="@id/locationLeft"
        app:layout_constraintRight_toLeftOf="@id/locationRight"
        android:id="@+id/locationMarker"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textBottom"
        app:layout_constraintBottom_toTopOf="@id/buttonBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/round_button_style"
        android:text="@string/discoverPhrase"
        android:visibility="invisible"
        tools:visibility="visible"
        android:fontFamily="@font/cairo_bold"
        android:textColor="@color/colorOfBackground"
        android:id="@+id/discoverButton"
        android:textStyle="bold"
        android:textSize="@dimen/textSmall"
        />
</androidx.constraintlayout.widget.ConstraintLayout>