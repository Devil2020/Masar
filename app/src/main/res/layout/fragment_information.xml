<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.InformationFragment">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.InformationFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorOfBackground"
        app:title="Informations"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/actionBar"
        app:titleTextColor="@android:color/white"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/youtubeKey"
        android:layout_below="@id/actionBar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionBar"
        android:layout_toRightOf="@id/youtubeKey"
        android:gravity="center|left"
        android:text="Youtube"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:id="@+id/youtubeValue"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/textMiddum"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/cairo_bold"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/facebookKey"
        android:layout_below="@id/youtubeKey"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youtubeValue"
        android:layout_toRightOf="@id/youtubeKey"
        android:gravity="center|left"
        android:text="Facebook"
        android:textAppearance="@style/cairo_bold"
        android:textColor="#000"
        android:id="@+id/facebookValue"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/textMiddum"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/referenceKey"
        android:layout_below="@id/facebookKey"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebookValue"
        android:layout_toRightOf="@id/youtubeKey"
        android:gravity="center|left"
        android:text="Refrences"
        android:textColor="#000"
        android:textAppearance="@style/cairo_bold"
        android:id="@+id/referenceValue"
        android:fontFamily="@font/cairo_bold"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/textMiddum"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/referenceKey"
        android:text="لو عايز تضيف معلومات عن المبانى الأثرية و تساعد فى نشر الوعى ابعتلنا على "
        android:textColor="#000"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/textBig"
        android:padding="5dp"
        android:gravity="center"
        android:textAppearance="@style/cairo_bold"
        android:layout_marginTop="20dp"
        android:id="@+id/infoValue"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoValue"
        android:text="masarmasr10@gmail.com"
        android:textColor="@color/colorOfBackground"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/textBig"
        android:padding="5dp"
        android:gravity="center"
        android:textAppearance="@style/cairo_bold"
        android:layout_marginTop="20dp"
        android:id="@+id/accountValue"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountValue"
        android:text="شوف اكتر عن المشروع على BEHANCE "
        android:textColor="#000"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/textBig"
        android:textAppearance="@style/cairo_bold"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/behanceValue"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/behanceValue"
        android:text="https://www.behance.net/gallery/60307323/MASAR "
        android:textColor="@color/colorOfBackground"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/textBig"
        android:padding="5dp"
        android:gravity="center"
        android:textAppearance="@style/cairo_bold"
        android:layout_marginTop="20dp"

        />

</RelativeLayout>
</ScrollView>