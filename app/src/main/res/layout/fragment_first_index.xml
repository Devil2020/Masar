<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".ui.splash.fragments.FirstIndexFragment">

                <!--   our guidlines   -->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/logoTop"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        android:id="@+id/logBottom"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/logoLeft"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/logRight"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"
        android:id="@+id/textTop"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logoTop"
        app:layout_constraintBottom_toTopOf="@id/logBottom"
        app:layout_constraintLeft_toRightOf="@id/logoLeft"
        app:layout_constraintRight_toLeftOf="@id/logRight"
        android:scaleType="centerCrop"
        tools:src="@drawable/intro1"
        android:id="@+id/logo"
        />

    <TextView
        android:id="@+id/firstScreenText1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top|center"
        android:text="@string/eachDistinationPhase"
        android:textColor="@color/colorOfBackground"
        android:textSize="@dimen/textExtraBig"
        android:textAppearance="@style/cairo_bold"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/logBottom"
        app:layout_constraintLeft_toRightOf="@id/logoLeft"
        app:layout_constraintRight_toLeftOf="@id/logRight"
        app:layout_constraintTop_toBottomOf="@id/textTop" />

</androidx.constraintlayout.widget.ConstraintLayout>