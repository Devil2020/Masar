<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.splash.fragments.SecondIndexFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"
        android:id="@+id/logoTop"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        android:id="@+id/logBottom"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/logoLeft"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/logRight"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        android:id="@+id/textTop"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/textBottom"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logoTop"
        app:layout_constraintBottom_toTopOf="@id/logBottom"
        app:layout_constraintLeft_toRightOf="@id/logoLeft"
        app:layout_constraintRight_toLeftOf="@id/logRight"
        android:scaleType="centerInside"
        tools:visibility="visible"
        tools:src="@drawable/intro2"
        android:visibility="invisible"
        android:id="@+id/imageWithProblem"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/logoLeft"
        app:layout_constraintRight_toLeftOf="@id/logRight"
        android:weightSum="8"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/secondScreenText1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="top|center"
            android:textAppearance="@style/cairo_bold"
            android:text="@string/buildings"
            android:textColor="@color/colorOfBackground"
            android:textSize="@dimen/textBig"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/secondScreenText2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:autoSizeTextType="uniform"
            android:gravity="top|center"
            android:textAppearance="@style/cairo_bold"
            android:text="@string/longPhase"
            android:textColor="@color/colorOfBackground"
            android:textSize="@dimen/textMiddum"
            android:visibility="invisible"
            app:fontFamily="@font/cairo_bold"
            tools:visibility="visible" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>